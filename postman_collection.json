				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save the JWT token to environment variable",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"jwt_token\", jsonData.access_token);",
									"    ",
									"    // Save current organization ID",
									"    if (jsonData.current_organization) {",
									"        pm.environment.set(\"current_tenant_id\", jsonData.current_organization.id);",
									"    }",
									"    ",
									"    console.log(\"Token saved:\", jsonData.access_token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password\",\n    \"tenant_id\": \"acme\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"login"
							]
						},
						"description": "Login with email and password. Optionally specify tenant_id (UUID or slug) to select initial organization. Returns JWT token with embedded roles and permissions."
					},
					"response": []
				},
